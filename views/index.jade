extends layout

block content
    .row.mt-1
      .col-sm
        button.btn.btn-primary(type='button' data-toggle='modal' data-target='#generate-cells-modal') Generate cells
        button#find-biggest-contiguous-area-btn.disabled.btn.btn-primary(type='button') Find biggest adjecent area

        #generate-cells-modal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='generate-cells-modal-label' aria-hidden='true')
          .modal-dialog(role='document')
            .modal-content
              .modal-header
                h5#generate-cells-modal.modal-title Select dims
                button.close(type='button' data-dismiss='modal' aria-label='Close')
                  span(aria-hidden='true') Ã—
              .modal-body
                  div(class='container')
                    div(class='row')
                      div(class='col-sm')
                        .input-group.mb-3
                          .input-group-prepend
                            span#basic-addon1.input-group-text x dim
                          input#x-dim-input.form-control(type='text' value="#{xDim}" aria-label='x dim' aria-describedby='basic-addon1')
                    div(class='row')
                      div(class='col-sm')
                        .input-group.mb-3
                          .input-group-prepend
                            span#basic-addon1.input-group-text y dim
                          input#y-dim-input.form-control(type='text' value="#{yDim}" aria-label='y dim' aria-describedby='basic-addon1')

              .modal-footer
                button.btn.btn-secondary(type='button' data-dismiss='modal') Close
                button#generate-cells-btn.btn.btn-primary(type='button') Ok
    .row.mt-5 
      .col-sm
        #content-pane