extends layout

block content
    .row.mt-1
      .col-sm
        button.btn.btn-primary(type='button' data-toggle='modal' data-target='#exampleModal') Generate cells

        #exampleModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
          .modal-dialog(role='document')
            .modal-content
              .modal-header
                h5#exampleModalLabel.modal-title Select dims
                button.close(type='button' data-dismiss='modal' aria-label='Close')
                  span(aria-hidden='true') Ã—
              .modal-body
                  div(class='container')
                    div(class='row')
                      div(class='col-sm')
                        .input-group.mb-3
                          .input-group-prepend
                            span#basic-addon1.input-group-text x dim
                          input.form-control(type='text' value=5 aria-label='x dim' aria-describedby='basic-addon1')
                    div(class='row')
                      div(class='col-sm')
                        .input-group.mb-3
                          .input-group-prepend
                            span#basic-addon1.input-group-text y dim
                          input.form-control(type='text' value=5 aria-label='x dim' aria-describedby='basic-addon1')

              .modal-footer
                button.btn.btn-secondary(type='button' data-dismiss='modal') Close
                button#generate-cells-btn.btn.btn-primary(type='button') Ok
    .row.mt-5 
      .col-sm
        #content-pane