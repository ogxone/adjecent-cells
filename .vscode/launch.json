    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": ["--es-module-specifier-resolution=node"],
            "request": "launch",
            "name": "debug with node",
            "program": "${workspaceFolder}/src/index.ts",
            "preLaunchTask": "npm: build",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "sourceMaps": true
        }
    ]
}